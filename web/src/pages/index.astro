  </section>
  
  <!-- CTA section -->
  <section class="bg-tuatara-dark py-20 text-white shadow-tuatara shadow-tuatara-primary"> 
    <div class="container px-4">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="mb-4 text-3xl font-bold sm:text-4xl">¿Listo para empezar?</h2>
        <p class="mb-8 text-slate-300">
          Crea tu primer proyecto ahora y descubre todo lo que MailBot puede hacer por ti.
        </p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <a href="#crawler-form" class="btn btn-primary">
            Crear proyecto
          </a>
          <a href="/docs" class="btn btn-outline">
            Ver documentación
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Update max depth value when range slider changes
  const maxDepthSlider = document.getElementById('maxDepth') as HTMLInputElement;
  const maxDepthValue = document.getElementById('maxDepthValue');
  
  if (maxDepthSlider && maxDepthValue) {
    maxDepthSlider.addEventListener('input', () => {
      maxDepthValue.textContent = maxDepthSlider.value;
    });
  }
</script>
